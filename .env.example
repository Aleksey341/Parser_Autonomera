# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (PostgreSQL - ОБЯЗАТЕЛЬНО!)
# Все данные должны попадать в PostgreSQL БД, не на компьютер

# Option 1: Kubernetes с CloudNativePG (ОСНОВНОЙ)
DATABASE_URL=postgresql://autonomera:autonomera@autonomera-rw.default.svc.cluster.local:5432/autonomera
# Альтернативный endpoint (read-only):
# DATABASE_URL=postgresql://autonomera:autonomera@autonomera-r.default.svc.cluster.local:5432/autonomera
DB_SSL=false

# Option 2: Amvera
# DATABASE_URL=postgresql://user:password@amvera-host:port/database
# DB_SSL=true

# Option 3: Локальное подключение (для разработки)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/autonomera777
# DB_SSL=false

# НИКОГДА не используйте SQLite в production!
# DB_TYPE=sqlite  ← ЗАПРЕТИТЬ!

# Parser Configuration
PARSER_TIME=00:00
PARSER_TIMEZONE=Europe/Moscow
MAX_PAGES=50
MIN_PRICE=0
MAX_PRICE=999999999
CONCURRENT_REQUESTS=500
REQUEST_DELAY=1000
REQUEST_DELAY_MS=50
REQUEST_TIMEOUT=40000
PARSER_REGION=

# CRON Configuration (Ежедневный автопарсинг)
CRON_ENABLED=true
CRON_TIME=1 0 * * *
# Расписание cron (по умолчанию: 1 0 * * * = каждый день в 00:01 по PARSER_TIMEZONE)
# Форматы cron:
#   '1 0 * * *'     - 00:01 каждый день
#   '0 0 * * *'     - 00:00 каждый день
#   '0 0,12 * * *'  - 00:00 и 12:00 каждый день
#   '0 */6 * * *'   - каждые 6 часов

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_NO_SANDBOX=false
