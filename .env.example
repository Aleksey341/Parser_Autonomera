# ============================================================================
# МВП-Аналитика: Переменные окружения
# ============================================================================

# Окружение
NODE_ENV=development

# Порт сервера
PORT=3000

# ============================================================================
# БАЗА ДАННЫХ
# ============================================================================

# PostgreSQL подключение (для production)
# Формат: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://mvp_user:mvp_password@localhost:5432/mvp_analitika

# ============================================================================
# БЕЗОПАСНОСТЬ
# ============================================================================

# Session secret для express-session
SESSION_SECRET=your-secret-key-change-in-production

# JWT secret (если будет использоваться)
JWT_SECRET=your-jwt-secret-key

# ============================================================================
# CORS И ДОСТУП
# ============================================================================

# Разрешённые источники CORS
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# ЛОГИРОВАНИЕ
# ============================================================================

# Уровень логирования: debug, info, warn, error
LOG_LEVEL=debug

# ============================================================================
# ПАРАМЕТРЫ ПРИЛОЖЕНИЯ
# ============================================================================

# Таймзона (для расчётов и отчётов)
TZ=Europe/Moscow

# Дата хранения данных (дней)
DATA_RETENTION_DAYS=1825

# Максимальный размер загружаемого файла (MB)
MAX_UPLOAD_SIZE=50
